{
  "manifest_version": 2,
  "name": "待浏览列表 (Firefox)",
  "version": "1.0",
  "description": "保存网页链接以便稍后浏览，支持按日期分组、搜索、去重等功能。",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "unviewed-list@example.com",
      "strict_min_version": "54.0"
    }
  }
}